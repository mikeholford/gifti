<section class="landing-wrapper hero is-medium has-background-primary">
  <div class="hero-body">
    <div class="container has-text-centered">
      <div class="columns">
        <div class="column is-one-third is-offset-one-third">


          <div class="card">
            <div class="card-content">
              <h2 class="">Enter your email to get started</h2>
              <h4 class="">Already a member? Log In</h4>
              <hr>
              <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <%= devise_error_messages! %>

                <div class="field has-addons">
                  <div class="control">
                    <div class="control has-icons-left has-icons-right">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class: "input is-medium", type: "email" %>
                      <span class="icon is-medium is-left">
                        <i class="fas fa-envelope"></i>
                      </span>
                    </div>
                  </div>
                  <div class="control">
                    <%= f.submit "Sign up", class: "button is-medium is-primary" %>
                  </div>
                </div>
              <% end %>

            </div>
            <footer class="card-footer">
              <%= render "devise/shared/links" %>
            </footer>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
